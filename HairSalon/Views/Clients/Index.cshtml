@{
  Layout = "_Layout";
}
<div class="container">

<h1 id="headline1">Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
}

@foreach (var client in Model)
{
  <h3><a href='/clients/@client.GetId()'>@client.GetClientName()</a></h3>
}

<h4><a href="/clients/new">Add new Client</a></h4>

<h4><a href="/clients/deleteall" onclick="return confirm('Are you sure you want to delete ALL of the clients?')">Delete All Clients</a></h4>

<p><a href='/'>Back home</a></p>

</div>