@{
  Layout = "_Layout";
}

<h1 class="pagetop">Edit @Model.GetClientName()</h1>
<hr>

<form action="/clients/@Model.GetId()/edit" method="post">
  <label for="name">Client Name:</label>
  <input type="text" id="name" name="name" placeholder="@Model.GetClientName()" required>
  <br>
  <label for="phone">Client Phone:</label>
  <input type="text" id="phone" name="phone" placeholder="@Model.GetClientPhone()" required>
  <br>
  <label for="email">Client Email:</label>
  <input type="text" id="email" name="email" placeholder="@Model.GetClientEmail()" required>
  <br>
  <button type="submit">Edit</button>
</form>
<div class="links"></div>
  <h4><a href="/clients/@Model.GetId()">Return to previous page</a></h4>
</div>