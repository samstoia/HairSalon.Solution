@{
  Layout = "_Layout";
}
<div class="container">

@using HairSalon.Models;

<h1 class="pagetop">Specialties</h1>

@if (@Model.Count == 0)
{
  <h3>No specialties have been added yet!</h3>
}

@foreach (var specialty in Model)
{
  <h3><a href='/specialties/@specialty.GetId()'>@specialty.GetSpecialtyName()</a></h3>
}

<h4><a href="/specialties/new">Add a new specialty</a></h4>


</div>