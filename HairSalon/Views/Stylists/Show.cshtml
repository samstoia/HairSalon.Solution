@{
  Layout = "_Layout";
}

<div class="container">

<h3>Here are all the clients in this stylist:</h3>

<ol>
@foreach (var client in @Model["clients"])
{
  <li><a href='/stylists/@Model["stylist"].GetId()/clients/@client.GetId()'>@client.GetClientName()</a></li>
}
</ol>

<p><a href='/stylists/@Model["stylist"].GetId()/clients/new'>Add a new client</a></p>
<p><a href='/stylists'>Return to stylist list</a></p>
<p><a href='/stylists/@Model["stylist"].GetId()/delete'>Delete this stylist</a></p>
<p><a href='/'>Return to Main Page</a></p>


</div>