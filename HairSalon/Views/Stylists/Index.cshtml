@{
  Layout = "_Layout";
}
<div class="container">

<h1 class="pagetop">Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
}

@foreach (var stylist in Model)
{
  <h3><a href='/stylists/@stylist.GetId()'>@stylist.GetStylistName()</a></h3>
}


<h4><a href="/stylists/new">Add a new stylist</a></h4>

<h4><a href="/stylists/deleteall" onclick="return confirm('Are you sure you want to delete all of the stylists?')">Delete All Stylists</a></h4>



</div>