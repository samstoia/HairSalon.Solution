@{
  Layout = "_Layout";
}

<h1>Edit Stylist</h1>
<hr>

<h2>Edit @Model.GetStylistName()</h2>

<form action="/stylists/@Model.GetId()/edit" method="post">
  <label for="name">Stylist Name:</label>
  <input type="text" id="name" name="name" placeholder="@Model.GetStylistName()">


  <button type="submit">Edit</button>
</form>
<h4><a href="/stylists/@Model.GetId()">Return to previous page</a></h4>